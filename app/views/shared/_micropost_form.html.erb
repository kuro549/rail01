<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <% trans = t 'app.views.shared._micropost_form.placeholder' %>
    <%= f.text_area :content, placeholder: trans %>
  </div>
  <% trans = t 'app.views.shared._micropost_form.post' %>
  <%= f.submit trans, class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<% trans = t 'app.views.shared._micropost_form.alertsize' %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert(<%= trans %>);
    }
  });
</script>